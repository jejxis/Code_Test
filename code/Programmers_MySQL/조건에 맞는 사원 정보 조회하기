-- 코드를 작성해주세요
SELECT SUM(B.SCORE) AS SCORE, A.EMP_NO, A.EMP_NAME, A.POSITION, A.EMAIL
FROM HR_EMPLOYEES A
INNER JOIN HR_GRADE B
ON A.EMP_NO = B.EMP_NO
GROUP BY A.EMP_NO
HAVING SUM(B.SCORE) = (
    SELECT MAX(D.SCORE) 
    FROM (
        SELECT SUM(C.SCORE) AS SCORE
        FROM HR_GRADE C
        GROUP BY C.EMP_NO
    ) D
);
